{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@api-helper/*": ["./src/server/api/routers/helpers/*"],
      "@asset/*": ["./src/components/assets/*"],
      "@component/*": ["./src/components/*"],
      "@hook/*": ["./src/hooks/*"],
      "@page/*": ["./src/pages/*"],
      "@provider/*": ["./src/provider/*"],
      "@router/*": ["./src/server/api/routers/*"],
      "@router/helper/*": ["./src/server/api/routers/helpers/*"],
      "@scraper/*": ["./src/server/scrapers/*"],
      "@server/*": ["./src/server/*"],
      "@style/*": ["./src/styles/*"],
      "@type/*": ["./src/types/*"],
      "@util/*": ["./src/utils/*"]
    },
    "plugins": [{ "name": "next" }],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
